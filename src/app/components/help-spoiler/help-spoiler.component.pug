            span.sub_icon.glyphicon.glyphicon-heart
        a.btn.btn-success(href='#') MUSEUMS & ART
            span.sub_icon.glyphicon.glyphicon-star-empty
        a.btn.btn-success(href='#') PERFORMANCES
            span.sub_icon.glyphicon.glyphicon-bullhorn
        a.btn.btn-warning(href='#') ACTIVE
            span.sub_icon.glyphicon.glyphicon-camera
        a.btn.btn-warning(href='#') EXTREME
            span.sub_icon.glyphicon.glyphicon-warning-sign

