                    img.img-circle.special-img(src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTpBTsG7iYnlWEbU-e536b_ZDzaEkpSxEa9MDwXVyIZtDJZ-ikt')
                    img.img-circle.special-img(src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcThseiGdu2N7VlUOj4MY1kovXAKK52SRdLwoqV-TinUVo-kiF6iBw')
                    img.img-circle.special-img(src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTUo1kyYk7aWhhQivE-4nxz2tfl3EhLUs5Yl4ESVJJItRFsFVuZgw')
                    img.img-circle.special-img(src='https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcTFd2vWiIxXsnj8yyBBWcqzDnwDdk840sew3ALyEL9IGd4RW97Y')
                    img.img-circle.special-img(src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTpBTsG7iYnlWEbU-e536b_ZDzaEkpSxEa9MDwXVyIZtDJZ-ikt')
        div.right-col
            img.img-circle.special-img#bla-bla-car(src='https://www.blablacar.com/images/blablacar-ridesharing-logo.png')

            div.btn-group.open.share
                a.btn.btn-info.dropdown-toggle(href='#', data-toggle='dropdown', aria-expanded='true', (click)='$event.preventDefault(); routeWays.isShareDropdownVisible = !routeWays.isShareDropdownVisible;')
                    | Share
                    span.caret
                ul.dropdown-menu(*ngIf="routeWays.isShareDropdownVisible")
                    li
                        a(href='#') Facebook
                    li
                        a(href='#') Twitter
                    li
                        a(href='#') VK

